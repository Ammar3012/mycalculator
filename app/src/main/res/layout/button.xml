<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_grey">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="4"
        >
        <Button
            android:id="@+id/btn_clear_all"
            android:text="AC"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/button_layout"
            >
        </Button>

        <Button
            android:id="@+id/btn_clear"
            android:text="C"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/button_layout">
        </Button>
        <Button
            android:id="@+id/btn_pangkat"
            android:text="^2"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/button_layout">
        </Button>
        <Button
            android:id="@+id/btn_akar"
            android:text="√"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/button_layout">
        </Button>
        <Button
            android:id="@+id/btn_round"
            android:text="round"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/button_layout">
        </Button>
        <Button
            android:id="@+id/btn_floor"
            android:text="floor"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/button_layout">
        </Button>
        <Button
            android:id="@+id/btn_ceil"
            android:text="ceiling"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/button_layout">
        </Button>
        <Button
            android:id="@+id/btn_div"
            android:text="÷"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@drawable/button_layout">
        </Button>

        <Button
            android:id="@+id/btn_7"
            android:text="7"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/button_angka">
        </Button>
        <Button
            android:id="@+id/btn_8"
            android:text="8"
            android:layout_marginTop="5dp"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/button_angka">
        </Button>
        <Button
            android:id="@+id/btn_9"
            android:text="9"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/button_angka">
        </Button>

        <Button
            android:id="@+id/btn_kali"
            android:text="×"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="3"
            android:background="@drawable/button_layout">
        </Button>

        <Button
            android:id="@+id/btn_4"
            android:text="4"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@drawable/button_angka">
        </Button>
        <Button
            android:id="@+id/btn_5"
            android:text="5"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/button_angka">
        </Button>
        <Button
            android:id="@+id/btn_6"
            android:text="6"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@drawable/button_angka">
        </Button>

        <Button
            android:id="@+id/btn_min"
            android:text="-"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="3"
            android:layout_column="3"
            android:background="@drawable/button_layout">
        </Button>

        <Button
            android:id="@+id/btn_1"
            android:text="1"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@drawable/button_angka">
        </Button>
        <Button
            android:id="@+id/btn_2"
            android:text="2"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/button_angka">
        </Button>
        <Button
            android:id="@+id/btn_3"
            android:text="3"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="4"
            android:layout_column="2"
            android:background="@drawable/button_angka">
        </Button>
        <Button
            android:id="@+id/btn_plus"
            android:text="+"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="4"
            android:layout_column="3"
            android:background="@drawable/button_layout">
        </Button>
        <Button
            android:visibility="invisible"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="5"
            android:layout_column="0"
            android:background="@drawable/button_angka">
        </Button>

        <Button
            android:id="@+id/btn_0"
            android:text="0"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="5"
            android:layout_column="1"
            android:background="@drawable/button_angka">
        </Button>
        <Button
            android:id="@+id/btn_period"
            android:text="."
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="5"
            android:layout_column="2"
            android:background="@drawable/button_angka">
        </Button>
        <Button
            android:id="@+id/btn_enter"
            android:text="="
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_row="5"
            android:layout_column="3"
            android:background="@drawable/button_layout">
        </Button>

    </GridLayout>
</RelativeLayout>